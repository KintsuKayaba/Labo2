{
  "name": "labo-string",
  "version": "1.0.0",
  "description": "CLI Node.js per manipolare stringhe: inversione, palindromi, troncamento, conteggio caratteri.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "jest --coverage",
    "lint": "eslint .",
    "prepare": "npm run lint"
  },
  "keywords": [
    "cli",
    "string",
    "nodejs",
    "palindrome",
    "truncate",
    "reverse"
  ],
  "author": "Gabriele Bestoso",
  "license": "UniGE",
  "repository": {
    "type": "git",
    "url": "https://github.com/KintsuKayaba/labo-string.git"
  },
  "bugs": {
    "url": "https://github.com/KintsuKayaba/labo-string/issues"
  },
  "homepage": "https://github.com/KintsuKayaba/labo-string#readme",
  "devDependencies": {
    "jest": "^29.0.0",
    "eslint": "^8.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/test/**/*.test.js"
    ]
  }
}
